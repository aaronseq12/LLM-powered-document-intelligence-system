# Environment Configuration Template for LLM Document Intelligence System
# Copy this file to .env and update the values for your environment

# ================================
# Environment Settings
# ================================
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO
SECRET_KEY=your-very-secret-key-change-in-production-minimum-32-characters

# ================================
# Server Configuration
# ================================
HOST=0.0.0.0
PORT=8000
WORKERS=4
APP_NAME="LLM Document Intelligence System"
VERSION=1.0.0

# ================================
# Domain and CORS Settings
# ================================
DOMAIN=localhost
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000,https://your-domain.com
ALLOWED_HOSTS=localhost,127.0.0.1,your-domain.com

# ================================
# Database Configuration
# ================================
DATABASE_URL=postgresql+asyncpg://postgres:password@localhost:5432/document_intelligence
POSTGRES_DB=document_intelligence
POSTGRES_USER=postgres
POSTGRES_PASSWORD=password
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

# Database Pool Settings
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20
DATABASE_POOL_TIMEOUT=30

# ================================
# Redis Configuration
# ================================
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=password
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_MAX_CONNECTIONS=10
REDIS_SOCKET_TIMEOUT=5

# ================================
# Azure OpenAI Configuration
# ================================
AZURE_OPENAI_API_KEY=your-azure-openai-api-key
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com
AZURE_OPENAI_API_VERSION=2023-12-01-preview
AZURE_OPENAI_DEPLOYMENT_NAME=gpt-4-turbo
AZURE_OPENAI_MODEL_NAME=gpt-4-turbo
AZURE_OPENAI_MAX_TOKENS=4000
AZURE_OPENAI_TEMPERATURE=0.1

# ================================
# Azure Document Intelligence Configuration
# ================================
AZURE_DOCUMENT_INTELLIGENCE_KEY=your-azure-document-intelligence-key
AZURE_DOCUMENT_INTELLIGENCE_ENDPOINT=https://your-resource.cognitiveservices.azure.com
AZURE_DOCUMENT_INTELLIGENCE_API_VERSION=2023-07-31

# ================================
# Authentication Settings
# ================================
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7
ALGORITHM=HS256

# ================================
# File Upload Configuration
# ================================
MAX_FILE_SIZE=50
UPLOAD_DIRECTORY=/tmp/uploads
ALLOWED_FILE_EXTENSIONS=.pdf,.docx,.doc,.txt,.rtf,.jpg,.jpeg,.png,.tiff,.bmp

# ================================
# Processing Settings
# ================================
DEFAULT_CONFIDENCE_THRESHOLD=0.8
MAX_CONCURRENT_PROCESSING=5
PROCESSING_TIMEOUT_SECONDS=300

# ================================
# Cache Configuration
# ================================
CACHE_TTL_SECONDS=3600
CACHE_MAX_SIZE=1000

# ================================
# Rate Limiting
# ================================
RATE_LIMIT_PER_MINUTE=100
RATE_LIMIT_BURST=200

# ================================
# Background Tasks (Celery)
# ================================
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# ================================
# Monitoring and Metrics
# ================================
ENABLE_METRICS=true
METRICS_PORT=8001
HEALTH_CHECK_TIMEOUT=10

# ================================
# SSL/TLS Configuration (Production)
# ================================
SSL_KEYFILE=
SSL_CERTFILE=
ACME_EMAIL=admin@your-domain.com

# ================================
# Docker Compose Overrides
# ================================
APP_PORT=8000
DEV_APP_PORT=8001
NGINX_PORT=80
POSTGRES_PORT=5432
REDIS_PORT=6379
PROMETHEUS_PORT=9090
GRAFANA_PORT=3001
NODE_EXPORTER_PORT=9100
FLOWER_PORT=5555
PGADMIN_PORT=5050
REDIS_COMMANDER_PORT=8081

# ================================
# Frontend Configuration
# ================================
VITE_API_BASE_URL=http://localhost:8000
VITE_WS_BASE_URL=ws://localhost:8000
REACT_APP_VERSION=1.0.0

# ================================
# Email Configuration (Optional)
# ================================
MAIL_USERNAME=your-email@domain.com
MAIL_PASSWORD=your-email-password
MAIL_FROM=your-email@domain.com
MAIL_PORT=587
MAIL_SERVER=smtp.gmail.com
MAIL_TLS=true
MAIL_SSL=false

# ================================
# External Services (Optional)
# ================================
SENTRY_DSN=your-sentry-dsn
OPENTELEMETRY_ENDPOINT=http://localhost:4317

# ================================
# Development Tools
# ================================
PGADMIN_EMAIL=admin@example.com
PGADMIN_PASSWORD=admin
GRAFANA_PASSWORD=admin

# ================================
# Testing Configuration
# ================================
TEST_DATABASE_URL=postgresql+asyncpg://postgres:password@localhost:5432/document_intelligence_test
TEST_REDIS_URL=redis://localhost:6379/15

# ================================
# Production Overrides
# ================================
# Uncomment and modify these for production deployment

# ENVIRONMENT=production
# DEBUG=false
# LOG_LEVEL=WARNING
# SECRET_KEY=your-production-secret-key-must-be-secure
# DATABASE_URL=postgresql+asyncpg://username:password@production-db:5432/document_intelligence
# REDIS_URL=redis://:password@production-redis:6379/0
# DOMAIN=your-production-domain.com
# ALLOWED_ORIGINS=https://your-production-domain.com
# ALLOWED_HOSTS=your-production-domain.com
# WORKERS=8

# ================================
# Cloud Provider Specific (AWS/GCP/Azure)
# ================================
# AWS_ACCESS_KEY_ID=your-aws-access-key
# AWS_SECRET_ACCESS_KEY=your-aws-secret-key
# AWS_DEFAULT_REGION=us-east-1
# AWS_S3_BUCKET=your-s3-bucket

# GCP_PROJECT_ID=your-gcp-project-id
# GOOGLE_APPLICATION_CREDENTIALS=/path/to/credentials.json

# AZURE_STORAGE_ACCOUNT=your-storage-account
# AZURE_STORAGE_KEY=your-storage-key
# AZURE_CONTAINER_NAME=documents

# ================================
# Backup and Recovery
# ================================
BACKUP_ENABLED=false
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_DESTINATION=s3://your-backup-bucket

# ================================
# Feature Flags
# ================================
ENABLE_DOCUMENT_PREVIEW=true
ENABLE_BATCH_PROCESSING=true
ENABLE_API_DOCUMENTATION=true
ENABLE_WEBSOCKET=true
ENABLE_BACKGROUND_TASKS=true
